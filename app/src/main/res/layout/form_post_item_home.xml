<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#6959CD"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textViewPost"
                app:layout_constraintTop_toTopOf="@+id/textViewPost" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUser3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/textViewPost"
                app:layout_constraintTop_toTopOf="@+id/textViewPost" />

            <TextView
                android:id="@+id/textViewDatePost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/textViewPost"
                app:layout_constraintTop_toTopOf="@+id/textViewPost" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:src="@drawable/ic_star"/>

            <TextView
                android:id="@+id/textViewLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/textViewPost"
                app:layout_constraintTop_toTopOf="@+id/textViewPost" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>